@model PagedList.IPagedList<DemoModel.ViewModel.PostViewModel>
@using PagedList.Mvc;
@{
    Layout = null;
}

<input type="hidden" id="hiddenPostId" />
<table id="zero_config" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Created Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DemoModel.ViewModel.PostViewModel entity in Model)
        {
            <tr>
                <td>@entity.Id</td>
                <td>@entity.Title</td>
                <td>@entity.Description</td>
                <td>@entity.CreatedOn</td>
                <td>
                    <a class="btn btn-outline-info btn-xs linkbutton"
                       href="@Url.Action("AddPost", "Post"
                    ,new {data=entity.Id})" name="edit"><i class="fa fa-edit"></i>Edit</a>&nbsp;
                    <a class="btn btn-outline-info btn-xs linkbutton"
                       href="@Url.Action("DeletePost", "Post"
                    ,new {data=entity.Id})" name="edit"><i class="fa fa-trash"></i>Delete</a>&nbsp;
                    <a href="#" class="btn btn-danger" onclick="ConfirmDelete(@entity.Id)"><i class="glyphicon glyphicon-trash"></i> </a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
    </tfoot>

</table>
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title">Delete Posts</h3>
            </div>
            <div class="modal-body">
                <h4>Are you sure you want to Remove this Post?</h4>



            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
                <a href="#" class="btn btn-success" onclick="DeletePost()">Confirm</a>
            </div>

        </div>

    </div>
</div>
